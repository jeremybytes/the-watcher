<Window x:Class="watcher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:watcher"
        mc:Ignorable="d"
        Title="MainWindow" Height="175" Width="400"
        WindowStyle="None" AllowsTransparency="True" Topmost="True"
        Background="Transparent" ShowInTaskbar="False">
    <Border BorderBrush="Black" BorderThickness="4"
            MouseDown="Border_MouseDown"
            CornerRadius="5">
        <Grid>
            <Image Source="Media/jason2.jpg" Stretch="UniformToFill" />
            <TextBlock x:Name="J_sonTextBlock"
                       Foreground="White" FontWeight="Bold" FontSize="32" 
                       HorizontalAlignment="Center" VerticalAlignment="Bottom" />
        </Grid>
    </Border>
</Window>
